{
  "name": "datasciencepro-performance-config",
  "version": "1.0.0",
  "performance": {
    "budgets": [
      {
        "type": "bundle",
        "maximumWarning": "500kb",
        "maximumError": "1mb"
      },
      {
        "type": "initial",
        "maximumWarning": "2mb",
        "maximumError": "5mb"
      }
    ],
    "optimization": {
      "splitChunks": {
        "chunks": "all",
        "cacheGroups": {
          "vendor": {
            "test": "/[\\\\/]node_modules[\\\\/]/",
            "name": "vendors",
            "chunks": "all"
          },
          "mui": {
            "test": "/[\\\\/]node_modules[\\\\/]@mui[\\\\/]/",
            "name": "mui",
            "chunks": "all",
            "priority": 10
          },
          "charts": {
            "test": "/[\\\\/]node_modules[\\\\/](plotly\\.js|recharts)[\\\\/]/",
            "name": "charts",
            "chunks": "all",
            "priority": 10
          }
        }
      }
    },
    "metrics": {
      "FCP": "< 1.8s",
      "LCP": "< 2.5s",
      "FID": "< 100ms",
      "CLS": "< 0.1"
    }
  },
  "monitoring": {
    "enabled": true,
    "endpoints": [
      "https://datasciencepro-completo.netlify.app"
    ]
  }
}
